FROM node:19-alpine as builder

WORKDIR /app

COPY ./yarn.lock ./package.json /app/

RUN yarn --frozen-lock-file --production && yarn cache clean

COPY . /app/

RUN yarn build

FROM nginx:alpine

COPY conf/default.conf.template /etc/nginx/templates/
COPY --from=builder --chown=nginx:nginx build /usr/share/nginx/html/

CMD ["nginx", "-g", "daemon off;"]